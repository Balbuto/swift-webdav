#!/bin/bash
### BEGIN INIT INFO
# Provides:            hpcloud-webdav
# Required-Start:      $remote_fs $syslog
# Required-Stop:       $remote_fs $syslog
# Should-Start:                $local_fs
# Should-Stop:         $local_fs
# Default-Start:       2 3 4 5
# Default-Stop:                0 1 6
# Short-Description:   Start hpcloud-webav daemon
# Description:         Start hpcloud-webdav, a WebDAV gateway to HPCloud
### END INIT INFO

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
MAINSCRIPT=/opt/hpcloud-webdav/server.js
DAEMONNAME=hpcloud-webdav
DESC=hpcloud-webdav

CMD="/usr/bin/node $MAINSCRIPT"

set -e

. /lib/lsb/init-functions

case "$1" in
  start)
    echo -n "Starting $DESC"
    start-stop-daemon --start --quiet --exec $CMD
    ;;
  stop)
    echo -n "Stopping $DESC"
    start-stop-daemon --stop--quiet --oknodo --retry 5 --pidfile $PIDFILE --exec $CMD
    ;;
  restart|force-reload)
    echo -n "Restarting $DESC"
    start-stop-daemon --stop--quiet --oknodo --retry 5 --pidfile $PIDFILE --exec $CMD
    start-stop-daemon --start --quiet --exec $CMD
    ;;
  status)
    echo -n "It is running, or maybe not."
    ;;
  *)
    echo "Usage: hpcloud-webdav {start|stop|restart|status}" >&2
    exit 1
    ;;
esac

exit 0
